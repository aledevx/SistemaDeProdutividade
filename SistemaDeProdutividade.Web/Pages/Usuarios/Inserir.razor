@page "/usuarios/inserir"
@inherits InserirUsuarioPage

<PageTitle>Inserir usuário</PageTitle>

<MudContainer MinHeight="130px" Width="100%" Class="d-flex justify-space-between" >
    <MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex align-center">
        <MudContainer Class="d-inline">
            <MudText Typo="Typo.h4" Class="px-4">Inserir usuário</MudText>
            <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Página para insersão de usuário inicial</MudText>
        </MudContainer>
     </MudContainer>

    <MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex align-center justify-end gap-4">
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Class="rounded-lg" Style="height: 44px; width: 150px;">Cancelar</MudButton>
        <MudButton ButtonType="ButtonType.Submit" OnClick="OnValidSubmitAsync" Variant="Variant.Filled" Color="Color.Primary" Class="rounded-lg" Style="height: 44px; width: 150px;">Salvar</MudButton>
      </MudContainer>
</MudContainer>
<br>
<MudPaper MinHeight="650px" Width="100%" Class="py-12 px-6">
    <EditForm Model="@InputModel" OnInvalidSubmit="OnValidSubmitAsync">
        <MudTextField Variant="Variant.Outlined" Label="Nome do(a) Servidor(a)" Required="true" RequiredError="Name is required!" @bind-Value="InputModel.Nome" For="@(() => InputModel.Nome)" />
        <br/>
        <MudTextField Variant="Variant.Outlined" Label="CPF" Required="true" RequiredError="Cpf is required!" Style="width: 25%;" @bind-Value="InputModel.Cpf" For="@(() => InputModel.Cpf)" />
        <br />
        <MudTextField Variant="Variant.Outlined" Label="Matricula" Required="true" RequiredError="Matricula is required!" Style="width: 25%;" @bind-Value="InputModel.Matricula" For="@(() => InputModel.Matricula)" />
        <br />
        <MudSelect @bind-Value="InputModel.Perfil" Label="Perfil" Variant="Variant.Outlined" Style="width: 50%;" Required="true">
            @foreach (var perfil in perfis)
            {
                <MudSelectItem Value="@perfil">@perfil</MudSelectItem>
            }
        </MudSelect>
        <br />
    </EditForm>
</MudPaper>

