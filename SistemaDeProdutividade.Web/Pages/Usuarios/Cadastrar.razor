@page "/usuarios/cadastrar"
@inherits CadastrarUsuarioPage

<PageTitle>Home 2</PageTitle>

<MudContainer MinHeight="130px" Width="100%" Class="d-flex justify-space-between" >
    <MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex align-center">
        <MudContainer Class="d-inline">
            <MudText Typo="Typo.h4" Class="px-4">Cadastrar</MudText>
            <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Descrição das ações disponíveis na página</MudText>
        </MudContainer>
     </MudContainer>

    <MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex align-center justify-end gap-4">
        <MudButton Variant="Variant.Outlined" OnClick="Voltar" Color="Color.Primary" Class="rounded-lg" Style="height: 44px; width: 150px;">Cancelar</MudButton>
        @if (IsBusy)
        {
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
        }
        else
        {
            <MudButton ButtonType="ButtonType.Submit" OnClick="OnValidSubmitAsync" Variant="Variant.Filled" Color="Color.Primary" Class="rounded-lg" Style="height: 44px; width: 150px;">Salvar</MudButton>
        }
      </MudContainer>
</MudContainer>
<br>
<MudPaper MinHeight="650px" Width="100%" Class="py-12 px-6">
        <MudTextField T="string" @bind-Value="nomeUsuario" Variant="Variant.Outlined" Label="Nome do(a) Servidor(a)" Required="true" RequiredError="Name is required!" />
        <br/>
    <MudTextField T="string" @bind-Value="cpf" Variant="Variant.Outlined" Label="CPF" Required="true" RequiredError="Cpf is required!" InputType="InputType.Text" Pattern="[0-9]{11}$" MaxLength="11" Style="width: 25%;" />
        <br />
    <MudTextField T="string" @bind-Value="matricula" Variant="Variant.Outlined" Label="Matricula" Required="true" RequiredError="Matricula is required!" Style="width: 25%;" />
        <br />
    <MudSelect @bind-Value="CargoId" Label="Cargo" Variant="Variant.Outlined" Style="width: 50%;" Required="true" RequiredError="Selecione o Cargo">
        <MudSelectItem T="Guid" Value="Guid.Empty">Selecionar</MudSelectItem>
        @foreach (var cargo in Cargos)
        {
            <MudSelectItem T="Guid" Value="@cargo.Id">@cargo.Nome</MudSelectItem>
        }
    </MudSelect>
    <br />
    <MudSelect @bind-Value="SetorId" Label="Setor" Variant="Variant.Outlined" Required="true" RequiredError="Selecione o Setor" Style="width: 40%;">
    <MudSelectItem T="Guid" Value="Guid.Empty">Selecionar</MudSelectItem>
        @foreach (var setor in Setores)
        {
            <MudSelectItem T="Guid" Value="@setor.Id">@setor.Nome</MudSelectItem>
        }
    </MudSelect>
    <br/>
    <MudSelect @bind-Value="perfilSelected" Label="Perfil" Variant="Variant.Outlined" Style="width: 50%;" Required="true">
    <MudSelectItem T="string" Value="String.Empty">Selecionar</MudSelectItem>
        @foreach (var perfil in perfis)
        {
            <MudSelectItem Value="@perfil">@perfil</MudSelectItem>
        }
    </MudSelect>
</MudPaper>

