@page "/login"
@layout Layout.CleanLayout
@inherits LoginPage

@inject NavigationManager Navigation

<PageTitle>Tela de login</PageTitle>

<MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center">
    <MudItem xs="12" sm="8" md="4">
        <MudPaper Class="pa-4 d-flex flex-column align-center rounded-xl gap-4" Style="height: 580px;">
            <MudContainer Class="d-flex flex-column align-center" Style="height: 30%;">

            </MudContainer>
            <MudContainer Class="d-flex flex-column align-center" >
                <MudText Typo="Typo.h2" Style="color: #707070;
                                                    font-weight:bolder; 
                                                    font: normal normal bold 70px/94px Segoe UI;
                                                    letter-spacing: 0px;
                                                    color: #707070;
                                                    opacity: 1;">CPROD</MudText>
                <MudText Typo="Typo.caption" Style="color: #707070; 
                                                    font-size: 10px; 
                                                    text-align: left;
                                                    font: normal normal normal 12px/16px Segoe UI;
                                                    letter-spacing: 0px;
                                                    color: #707070;
                                                    opacity: 1; margin-top: -5px;">Sistema de Controle de Produtividade</MudText>
            </MudContainer>
            <MudContainer Class="d-flex flex-column align-center gap-4 py-4" >
                <MudTextField Variant="Variant.Outlined" Label="Cpf" @bind-Value="InputModel.Cpf" Margin="Margin.Dense" InputType="InputType.Text" Pattern="[0-9]{11}$" MaxLength="11" />
                <MudTextField Variant="Variant.Outlined" Label="Senha" @bind-Value="InputModel.Senha" InputType="InputType.Password" Margin="Margin.Dense" />
                @if (IsBusy)
                {
                    <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
                }
                else
                {
                    <MudButton Class="rounded-xl" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Size="Size.Small" Color="Color.Primary" OnClick="OnValidSubmitAsync" Style="width: 60%; font-weight: inherit; text-transform: initial;">Acessar</MudButton>
                }
            </MudContainer>
        </MudPaper>
    </MudItem>
</MudGrid>