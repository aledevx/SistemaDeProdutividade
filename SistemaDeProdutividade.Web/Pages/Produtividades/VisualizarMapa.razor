@page "/produtividades/mapas/visualizar"
@using SistemaDeProdutividade.Web.Models
@using SistemaDeProdutividade.Web.Models.Produtividades
@inherits VisualizarMapaProdPage

<PageTitle>Mapa da produtividade</PageTitle>

<MudContainer MinHeight="130px" Width="100%" Class="d-flex justify-space-between" >
    <MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex align-center">
        <MudContainer Class="d-inline">
            <MudText Typo="Typo.h4" Class="px-4">Mapa de Produtividade</MudText>
            <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Visualize as atividades referentes ao cargo selecionado</MudText>
        </MudContainer>
     </MudContainer>

    <MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex align-center justify-end gap-4">
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Class="rounded-lg" Href="/produtividades/mapas" Style="height: 44px; width: 150px;">Voltar</MudButton>
      </MudContainer>
</MudContainer>
<br>
<MudPaper MinHeight="250px" Width="100%" Class="py-12 px-6">
    <MudContainer Class="d-flex align-center" Fixed="true" Style="height: 60px">
        <MudContainer Style="width=45%;">
            <MudText Typo="Typo.h5"> <b>@modelData.Cargo</b></MudText>
        </MudContainer>
    </MudContainer>
    <br/>
    <MudContainer Fixed="true" Style="min-height: 80px">
        <MudTable T="MapaAtividade" Items="@Atividades" Hover="true" Breakpoint="Breakpoint.Sm">
            <HeaderContent>
                <MudTh>nº</MudTh>
                <MudTh>Descrição da Atividade</MudTh>
                <MudTh>Peso</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="nº">1</MudTd>
                <MudTd DataLabel="Descrição da Atividade">@context.Descricao</MudTd>
                <MudTd DataLabel="Peso">@context.Peso</MudTd>
            </RowTemplate>
        </MudTable>
    </MudContainer>
</MudPaper>

