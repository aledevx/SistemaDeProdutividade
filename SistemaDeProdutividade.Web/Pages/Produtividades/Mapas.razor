@page "/produtividades/mapas"
@using SistemaDeProdutividade.Communication.Responses.Produtividades
@using SistemaDeProdutividade.Communication.ViewModel.Produtividades
@inherits MapasProdPage

<PageTitle>Mapas de produtividades</PageTitle>

<MudContainer MinHeight="130px" Width="100%" Class="d-flex justify-space-between" >
    <MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex align-center">
        <MudContainer Class="d-inline">
            <MudText Typo="Typo.h4" Class="px-4">Mapas de Produtividades</MudText>
            <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Busque ou cadastre um novo mapa de produtividade</MudText>
        </MudContainer>
     </MudContainer>

    <MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex align-center justify-end gap-4">
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="rounded-lg" Style="height: 44px; width: 150px;" Href="/produtividades/cadastrar">Cadastrar</MudButton>
      </MudContainer>
</MudContainer>
<br>
<MudPaper MinHeight="350px" Width="100%" Class="py-12 px-6">
    <MudTable Items="@Mapas" T="MapaProdIndexVM" Dense="@dense" Hover="@hover" Bordered="@bordered" Striped="@striped" Filter="new Func<MapaProdIndexVM,bool>(FilterFunc1)" @bind-SelectedItem="selectedItem1">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Mapas de Produtividades Cadastradas</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="searchString1" Placeholder="Buscar" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Cargo</MudTh>
            <MudTh>Valor</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Cargo">@context.Cargo</MudTd>
            <MudTd DataLabel="Valor">@context.ValorProd</MudTd>
            <MudTd><MudButton Variant="Variant.Filled" Class="cursor-not-allowed" Size="Size.Small" Color="Color.Tertiary" OnClick="() => NavigateToProfile(context.Id)" Disabled>Visualizar</MudButton></MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>

</MudPaper>
